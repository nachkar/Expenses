<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/operations/List.xhtml</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>1</display-name>
        <web-resource-collection>
            <web-resource-name>1</web-resource-name>
            <description>admin</description>
            <url-pattern>/faces/categories/*</url-pattern>
            <url-pattern>/faces/users/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>admin</description>
            <role-name>1</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>0</display-name>
        <web-resource-collection>
            <web-resource-name>0</web-resource-name>
            <description>User</description>
            <url-pattern>/faces/operations/*</url-pattern>
            <url-pattern>/faces/Reports/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description>admins &amp; users</description>
            <role-name>1</role-name>
            <role-name>0</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>jdbc-realm</realm-name>
        <form-login-config>
            <form-login-page>/faces/Login.xhtml</form-login-page>
            <form-error-page>/faces/loginerror.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>admin</description>
        <role-name>1</role-name>
    </security-role>
    <security-role>
        <description>users</description>
        <role-name>0</role-name>
    </security-role>
</web-app>
